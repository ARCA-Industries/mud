<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mud.arca.io.mud">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity-alias
            android:name=".launch"
            android:label="@string/app_name"
            android:targetActivity=".LoginScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.CardBottomBar" />
        <activity
            android:name=".LoginScreenActivity"
            android:label="@string/app_name"
            android:theme="@style/LoginScreen" />
        <activity
            android:name=".DataRecordList.recorddetails.RecordDetailsActivity"
            android:label="Record Details" />
        <activity
            android:name=".Settings.VariableManagementActivity"
            android:label="Variable Management" />

        <receiver android:name=".DataStructures.AlarmReceiver"/>
    </application>



</manifest>